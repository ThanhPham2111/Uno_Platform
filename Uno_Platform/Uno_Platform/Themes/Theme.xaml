<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Colors -->
  <Color x:Key="PrimaryColor">#0078D4</Color>
  <Color x:Key="SecondaryColor">#E8F4F8</Color>
  <Color x:Key="BackgroundColor">#FFFFFF</Color>
  <Color x:Key="SurfaceColor">#F3F3F3</Color>
  <Color x:Key="ErrorColor">#FF0000</Color>
  <Color x:Key="SuccessColor">#00AA00</Color>
  <Color x:Key="TextPrimaryColor">#000000</Color>
  <Color x:Key="TextSecondaryColor">#666666</Color>
  <Color x:Key="BorderColor">#CCCCCC</Color>

  <!-- Brushes -->
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
  <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
  <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
  <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
  <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
  <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
  <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
  <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
  <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

  <!-- Font Sizes -->
  <x:Double x:Key="FontSizeExtraLarge">32</x:Double>
  <x:Double x:Key="FontSizeLarge">24</x:Double>
  <x:Double x:Key="FontSizeMedium">18</x:Double>
  <x:Double x:Key="FontSizeNormal">16</x:Double>
  <x:Double x:Key="FontSizeSmall">14</x:Double>
  <x:Double x:Key="FontSizeExtraSmall">12</x:Double>

  <!-- Spacing -->
  <x:Double x:Key="SpacingXS">5</x:Double>
  <x:Double x:Key="SpacingS">10</x:Double>
  <x:Double x:Key="SpacingM">20</x:Double>
  <x:Double x:Key="SpacingL">30</x:Double>
  <x:Double x:Key="SpacingXL">40</x:Double>

  <!-- Border Radius -->
  <CornerRadius x:Key="BorderRadiusSmall">5</CornerRadius>
  <CornerRadius x:Key="BorderRadiusMedium">10</CornerRadius>
  <CornerRadius x:Key="BorderRadiusLarge">15</CornerRadius>

  <!-- Button Styles -->
  <Style x:Key="PrimaryButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusSmall}"/>
    <Setter Property="Padding" Value="20,12"/>
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="MinHeight" Value="50"/>
  </Style>

  <Style x:Key="SecondaryButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
    <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusSmall}"/>
    <Setter Property="Padding" Value="20,12"/>
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="MinHeight" Value="50"/>
  </Style>

  <Style x:Key="DangerButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusSmall}"/>
    <Setter Property="Padding" Value="20,12"/>
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="MinHeight" Value="50"/>
  </Style>

  <!-- TextBox Styles -->
  <Style x:Key="StandardTextBoxStyle" TargetType="TextBox">
    <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusSmall}"/>
    <Setter Property="Padding" Value="10"/>
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    <Setter Property="MinHeight" Value="40"/>
  </Style>

  <Style x:Key="ErrorTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource StandardTextBoxStyle}">
    <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
    <Setter Property="Background" Value="#FFF5F5"/>
  </Style>

  <!-- TextBlock Styles -->
  <Style x:Key="HeadingStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
  </Style>

  <Style x:Key="SubheadingStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
  </Style>

  <Style x:Key="BodyStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
  </Style>

  <Style x:Key="LabelStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    <Setter Property="Margin" Value="0,0,0,5"/>
  </Style>

  <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
    <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>

  <!-- Border/Card Styles -->
  <Style x:Key="CardStyle" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
    <Setter Property="Padding" Value="{StaticResource SpacingM}"/>
    <Setter Property="CornerRadius" Value="{StaticResource BorderRadiusMedium}"/>
    <Setter Property="Margin" Value="0,0,0,15"/>
  </Style>

</ResourceDictionary>

