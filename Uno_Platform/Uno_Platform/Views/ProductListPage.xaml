<Page x:Class="Uno_Platform.Views.ProductListPage"
      x:Name="PageRoot"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:components="using:Uno_Platform.Components"
      xmlns:models="using:Uno_Platform.Models"
      xmlns:converters="using:Uno_Platform.Converters"
      Background="#F5F5F5">
  
  <Page.Resources>
    <!-- Page Enter Animation -->
    <Storyboard x:Name="PageEnterAnimation">
      <DoubleAnimation Storyboard.TargetName="ContentGrid"
                      Storyboard.TargetProperty="Opacity"
                      From="0"
                      To="1"
                      Duration="0:0:0.3"/>
    </Storyboard>
  </Page.Resources>

  <Grid x:Name="ContentGrid" Opacity="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Filter Section - ÄÆ¡n giáº£n -->
    <Border Grid.Row="0"
            Background="White"
            Padding="20"
            BorderThickness="0,0,0,1"
            BorderBrush="#E0E0E0">
      <StackPanel Spacing="15">
        
        <!-- Search Bar -->
        <Border Background="#F5F5F5"
                Padding="12"
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#DDD">
          <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
            <SymbolIcon Grid.Column="0"
                       Symbol="Find"
                       Foreground="#6366F1"
                       Width="20"
                       Height="20"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                    Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay}"
                    PlaceholderText="TÃ¬m kiáº¿m sáº£n pháº©m..."
                    BorderThickness="0"
                    Background="Transparent"
                    FontSize="16"
                    Foreground="#333"/>
          </Grid>
        </Border>

        <!-- Categories -->
        <StackPanel Spacing="10">
          <TextBlock Text="Danh má»¥c"
                     FontSize="16"
                     FontWeight="Bold"
                     Foreground="#333"/>
          <ScrollViewer HorizontalScrollBarVisibility="Auto"
                       VerticalScrollBarVisibility="Disabled"
                       HorizontalScrollMode="Auto">
            <ItemsControl x:Name="CategoriesItemsControl" ItemsSource="{x:Bind ViewModel.CategoriesWithCount, Mode=OneWay}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <StackPanel Orientation="Horizontal" Spacing="10"/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:CategoryWithCount">
                  <Button Click="CategoryButton_Click"
                         Tag="{x:Bind Name}"
                         Padding="16,10"
                         CornerRadius="20"
                         MinWidth="100"
                         FontSize="14"
                         FontWeight="SemiBold"
                         x:Name="CategoryBtn">
                    <Button.Style>
                      <Style TargetType="Button">
                        <Setter Property="Background" Value="#E0E0E0"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="BorderBrush" Value="#6366F1"/>
                        <Setter Property="Foreground" Value="#333"/>
                      </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                      <TextBlock Text="{x:Bind Name, Mode=OneWay}" VerticalAlignment="Center"/>
                      <Border Background="#EC4899"
                             CornerRadius="10"
                             Padding="6,3"
                             MinWidth="30">
                        <TextBlock Text="{x:Bind Count, Mode=OneWay}"
                                 Foreground="White"
                                 FontSize="12"
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"/>
                      </Border>
                    </StackPanel>
                  </Button>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </StackPanel>

        <!-- Results Count -->
        <TextBlock FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#666">
          <Run Text="{x:Bind ViewModel.FilteredProducts.Count, Mode=OneWay}"/>
          <Run Text=" sáº£n pháº©m"/>
        </TextBlock>

      </StackPanel>
    </Border>

    <!-- Products Display - Grid layout Ä‘Æ¡n giáº£n -->
    <ScrollViewer Grid.Row="1" 
                  Padding="20"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
      <Grid>
        <!-- Products Grid - Hiá»ƒn thá»‹ dáº¡ng grid vá»›i nhiá»u cá»™t -->
        <ItemsControl ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
                      x:Name="ProductsItemsControl">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Orientation="Vertical" Spacing="20"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="models:Product">
              <Border Width="300"
                     Height="420"
                     Margin="0,0,0,20"
                     Background="White"
                     CornerRadius="12"
                     BorderThickness="1"
                     BorderBrush="#E0E0E0"
                     Padding="0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top">
                <components:ProductCard Product="{x:Bind}"
                                     ViewDetailsCommand="{Binding ViewModel.NavigateToProductDetailCommand, ElementName=PageRoot}"
                                     AddToCartCommand="{Binding ViewModel.AddToCartCommand, ElementName=PageRoot}"/>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Empty State -->
        <Border x:Name="EmptyStateBorder"
                Background="White"
                Padding="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                Visibility="{x:Bind ViewModel.FilteredProducts.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverse}">
          <StackPanel Spacing="15" HorizontalAlignment="Center">
            <TextBlock Text="ðŸ”"
                       FontSize="60"
                       HorizontalAlignment="Center"
                       Opacity="0.5"/>
            <TextBlock Text="KhÃ´ng tÃ¬m tháº¥y sáº£n pháº©m"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>
    </ScrollViewer>

    <!-- Loading Overlay -->
    <components:LoadingIndicator Grid.Row="1"
                                IsLoading="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                                Message="Äang táº£i sáº£n pháº©m..."/>
  </Grid>
</Page>
