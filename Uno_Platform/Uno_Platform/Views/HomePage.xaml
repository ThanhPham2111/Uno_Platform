<Page x:Class="Uno_Platform.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Uno_Platform.Views"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Grid>
    <ScrollViewer>
      <StackPanel HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
                  Spacing="30"
                  Padding="40"
                  MaxWidth="600">
        
        <!-- Welcome Message -->
        <TextBlock Text="{x:Bind ViewModel.WelcomeMessage, Mode=OneWay}" 
                   FontSize="28" 
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>
        
        <!-- Navigation Buttons -->
        <Button Content="View Products" 
                Command="{x:Bind ViewModel.NavigateToProductsCommand}"
                Style="{StaticResource PrimaryButtonStyle}"
                FontSize="{StaticResource FontSizeMedium}"
                MinHeight="60"
                Margin="0,20,0,0"/>
        
        <Button Content="Logout" 
                Command="{x:Bind ViewModel.LogoutCommand}"
                Style="{StaticResource SecondaryButtonStyle}"
                Margin="0,10,0,0"/>
        
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Page>

