<Page x:Class="Uno_Platform.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Uno_Platform"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- Header -->
    <Border Grid.Row="0" 
            Background="#0078D4" 
            Padding="20">
      <TextBlock Text="Uno Platform Demo" 
                 FontSize="32" 
                 FontWeight="Bold" 
                 Foreground="White"
                 HorizontalAlignment="Center"/>
    </Border>
    
    <!-- Main Content -->
    <ScrollViewer Grid.Row="1" 
                  IsTabStop="True"
                  Padding="20">
      <StackPanel HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
                  Spacing="30"
                  MaxWidth="600">
        
        <!-- Counter Section -->
        <Border Background="#F3F3F3" 
                Padding="30" 
                CornerRadius="10">
          <StackPanel Spacing="20">
            <TextBlock Text="Bộ đếm" 
                       FontSize="24" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="CounterText" 
                       Text="0" 
                       FontSize="48" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="#0078D4"/>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Spacing="15">
              <Button x:Name="DecrementButton" 
                      Content="-" 
                      Width="60" 
                      Height="60"
                      FontSize="24"
                      Click="OnDecrementClick"/>
              <Button x:Name="IncrementButton" 
                      Content="+" 
                      Width="60" 
                      Height="60"
                      FontSize="24"
                      Click="OnIncrementClick"/>
            </StackPanel>
            <Button x:Name="ResetButton" 
                    Content="Đặt lại" 
                    HorizontalAlignment="Center"
                    Click="OnResetClick"/>
          </StackPanel>
        </Border>
        
        <!-- Info Section -->
        <Border Background="#E8F4F8" 
                Padding="20" 
                CornerRadius="10">
          <StackPanel Spacing="10">
            <TextBlock Text="Thông tin" 
                       FontSize="20" 
                       FontWeight="SemiBold"/>
            <TextBlock Text="Đây là ứng dụng Uno Platform chạy trên WebAssembly!" 
                       TextWrapping="Wrap"/>
            <TextBlock x:Name="ClickCountText" 
                       Text="Số lần nhấn: 0" 
                       FontWeight="SemiBold"
                       Foreground="#0078D4"/>
          </StackPanel>
        </Border>
        
        <!-- Color Picker Section -->
        <Border Background="#FFF4E6" 
                Padding="20" 
                CornerRadius="10">
          <StackPanel Spacing="15">
            <TextBlock Text="Chọn màu nền" 
                       FontSize="20" 
                       FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" 
                        Spacing="10"
                        HorizontalAlignment="Center">
              <Button Content="🔴" 
                      Width="50" 
                      Height="50"
                      Click="OnColorClick"
                      Tag="Red"/>
              <Button Content="🟢" 
                      Width="50" 
                      Height="50"
                      Click="OnColorClick"
                      Tag="Green"/>
              <Button Content="🔵" 
                      Width="50" 
                      Height="50"
                      Click="OnColorClick"
                      Tag="Blue"/>
              <Button Content="🟡" 
                      Width="50" 
                      Height="50"
                      Click="OnColorClick"
                      Tag="Yellow"/>
            </StackPanel>
          </StackPanel>
        </Border>
        
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Page>
